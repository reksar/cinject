{

"version": "2.0.0",
"tasks": [
  {
    "label": "Build with MSVC x64",
    "group": {
      "kind": "build",
      "isDefault": true
    },
    "dependsOrder": "sequence",
    "dependsOn": [
      "Assembly shellcode",
      "Extract shellcode",
      "Build injector"
    ],
    "problemMatcher": []
  },

  {
    "label": "Assembly shellcode",
    "type": "shell",
    "command": "utils\\shellcode-assembly.bat",
    "presentation": {
      "showReuseMessage": false,
      "group": "build"
    },
    "problemMatcher": []
  },

  {
    "label": "Extract shellcode",
    "type": "shell",
    "command": "utils\\shellcode-extract.bat",
    "presentation": {
      "showReuseMessage": false,
      "group": "build"
    },
    "problemMatcher": []
  },

  {
    "label": "Build injector",
    "type": "shell",
    "command": "cl",
    "args": [
      "/Z7",
      "/MDd",
      "/W4",
      "/EHsc",
      "/std:c++17",
      "/Od",
      "/Fobuild\\",
      "/Febuild\\",
      "src\\injector.cpp"
    ],
    "options": {
      "shell": {
        "executable": "C:\\Windows\\SysWOW64\\cmd.exe",
        "args": [
          "/D",
          "/C",
          "CALL \"C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\BuildTools\\VC\\Auxiliary\\Build\\vcvars64.bat\"",
          "&&"
        ]
      }
    },
    "presentation": {
      "group": "build"
    }
  },

  {
    "label": "Build test",
    "type": "shell",
    "command": "cl",
    "args": [
      "/MD",
      "/W4",
      "/EHsc",
      "/std:c++17",
      "/O2",
      "/Fobuild\\",
      "/Febuild\\",
      "src\\test.cpp"
    ],
    "options": {
      "shell": {
        "executable": "C:\\Windows\\SysWOW64\\cmd.exe",
        "args": [
          "/D",
          "/C",
          "CALL \"C:\\Program Files (x86)\\Microsoft Visual Studio\\2019\\BuildTools\\VC\\Auxiliary\\Build\\vcvars64.bat\"",
          "&&"
        ]
      }
    },
    "problemMatcher": []
  }
]

}
